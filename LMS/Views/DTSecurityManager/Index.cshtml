
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="form-inline">
                <div class="form-group">
                    <label>Search User&nbsp;</label>
                    <input type="text" id="filter_searchkey" placeholder="Leave blank to view all" class="form-control" />
                </div>
                <button type="button" class="btn btn-default" id="cmdFilter">Filter Search</button>                      
            </div>
        </div>
    </div>
    <div class="row">
        <br />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-3">
                        <h3 class="panel-title">User Maintenance</h3>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="tbl-UserAccounts" class="table table-striped table-bordered dt-responsive no-wrap" cellspacing="0" width="100%" style="font-size:smaller">
                                <thead>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>            
        </div>
    </div>
</div>

<div id="AddTableData" class="modal fade" role="dialog">
    <div class="modal-dialog" style="background-color:#ffffff;;width:60%">
        <div class="modal-body" style="background-color:white">
            <div id="add-display-modal-body">
            </div>
        </div>
        <div class="modal-footer" style="background-color:white">
            <div id="add-display-modal-footer">
            </div>
        </div>
    </div>
</div>

<div id="UpdateTableData" class="modal fade" role="dialog">
    <div class="modal-dialog" style="background-color:#ffffff;;width:60%">
        <div class="modal-body" style="background-color:white">
            <div id="Update-display-modal-body">
            </div>
        </div>
        <div class="modal-footer" style="background-color:white">
            <div id="Update-display-modal-footer">
            </div>
        </div>
    </div>
</div>

<div id="UserRoleTableData" class="modal fade" role="dialog">
    <div class="modal-dialog" style="background-color:#ffffff;;width:80%">
        <div class="modal-body" style="background-color:white">
            <div id="userRole-display-modal-body">
            </div>
        </div>
        <div class="modal-footer" style="background-color:white">
            <div id="userRole-display-modal-footer">
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    @Helper.LoadCustomJS("ViewsJS/DevelopmentTools/DTSecurityManager.js", Url)
}

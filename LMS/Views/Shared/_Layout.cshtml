
@{
    if(Session["loginDetails"] != null)
    {
        ViewBag.isEnabled = true;
        ViewBag.ApplicationUserAccount = Session["loginDetails"];
    }

 }
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RFC - Loans Management System</title>    
    @Styles.Render("~/Content/themeui/css")
    @Styles.Render("~/Content/DataTableCSS")




    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <style>
        body {
            font-family: 'Ubuntu', sans-serif !important;
        }
        input.form-control{
            border-bottom: 1px solid #CCC;
        }
        
    </style>

</head>
<body>
    <div id="wrapper">
        @if(ViewBag.isEnabled == true)
        {
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="nav-header">
                          <div class="dropdown profile-ele  ment">
                               
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                    <span class="clear">
                                        <br/>
                                        <br/>
                                        <span>Logged in as:</span>
                                        <span class="block m-t-xs" style="font-weight: normal;">
                                            @Html.Label("position", (string)ViewBag.ApplicationUserAccount[0]["NAME"])
                                        </span>
                                        <span class="text-muted text-xs block">@Html.Label("position", (string)ViewBag.ApplicationUserAccount[0]["DESCRIPTION"]) <b class="caret"></b></span>
                                        
                                    </span>
                                    <hr />
                                </a>
                                <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                    <li><a href="#profile.html">Profile</a></li>
                                    <li><a href="#contacts.html">Pending</a></li>
                                    <li><a href="#mailbox.html">Notifications</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#login.html">Logout</a></li>
                                </ul>
                            </div>

                      
                        <div class="logo-element">
                            RFC
                        </div>
                    </li>
                       <li class="active">
                            <a href="index.html"><i class="fa fa-th-large"></i> <span class="nav-label">Application</span> <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>@Html.ActionLink("BorrowerProfile", "Customer", "Customer")</li>       
                                <li>@Html.ActionLink("Loan Application", "Customer", "Customer")</li>                     
                                <li>@Html.ActionLink("Credit Investigation", "Customer", "Customer")</li>                                              
                            </ul>
                        </li>
                        <li>
                            <a href="index.html"><i class="fa fa-th-large"></i> <span class="nav-label">Booking</span> <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>@Html.ActionLink("Under Construction", "Contact", "Home")</li>                               
                            </ul>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-th-large"></i> <span class="nav-label">Collections</span> <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="#"><i class="fa fa-th-large"></i> <span class="nav-label">Official Receipt</span> <span class="fa arrow"></span></a>
                                    <ul class="nav nav-third-level">
                                        <li>@Html.ActionLink("Sundry Collection", "NewSundry", "OfficialReceipt")</li>
                                        <li>@Html.ActionLink("OR Listing", "Contact", "Home")</li>
                                    </ul>
                                </li>
                                <li>@Html.ActionLink("PDC Acknowledgement Receipt", "Contact", "Home")</li>
                                <li>@Html.ActionLink("PDC Batch Encoding", "Contact", "Home")</li>
                                <li>@Html.ActionLink("Return Check Notice", "Contact", "Home")</li>
                                <li>@Html.ActionLink("Deposit Slip", "Contact", "Home")</li>
                            </ul>
                        </li>
                    

                </ul>
            </div>
        </nav>
        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
               
                    <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
                        <div class="navbar-header">
                            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-top-links navbar-left" style="padding-left: 15px;">
                            <li>
                              <h2>RFC- Loans Management System</h2> 
                            </li>

                        </ul>
                        <ul class="nav navbar-top-links navbar-right">
                            <li>
                                <a href="@Url.Action("Logout", "Account")"><i class="fa fa-sign-out"></i> Logout</a>
                            </li>

                        </ul>
                    </nav>
               
            </div>
            
            <div class="wrapper wrapper-content">
                @RenderBody()
            </div>
            <div class="footer">
                <div class="pull-right">

                </div>
                <div>
                    
                </div>
            </div>
        </div>
        }else
        {
        <div class="wrapper wrapper-content">
            @RenderBody()
        </div>
        }
    </div>

    

    @Scripts.Render("~/Content/themeui/js")
    @Scripts.Render("~/Content/DataTableJS")




    @RenderSection("scripts", required: false)
</body>
</html>

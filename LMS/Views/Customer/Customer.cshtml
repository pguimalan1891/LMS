
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts
{    
    @Helper.LoadCustomJS("ViewsJS/Customer/JS_Customer.js", Url)
}

<div class="container-fluid">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-3">
                        <h3>Borrower Information Sheet</h3>
                    </div>                    
                </div>
            </div>
            <div class="panel-body">
                <div class="row">                    
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="tbl-customer" class="table table-striped table-bordered dt-responsive no-wrap" cellspacing="0" width="100%">
                                <thead>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div id="DisplayCustomerModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="background-color:#ffffff;width:90%">
        <div class="modal-header">
            <button class="btn btn-info" id="dlgadd-add-btn">Update Customer Profile</button>
            <button class="btn btn-info" id="dlgadd-close-btn">Print Customer Profile</button>    
        </div>
        <div class="modal-body" style="background-color:white">
            <div id="display-modal-body">
            </div>
        </div>
        
    </div>
</div>

<div id="UpdateCustomerModal" class="modal fade" role="dialog">
    <div class="modal-dialog" style="background-color:#ffffff;width:90%">
        <div class="modal-header">
            <button class="btn btn-info" id="dlgadd-add-btn">Save Customer Profile</button>
            <button class="btn btn-info" id="dlgadd-close-btn">Cancel Update</button>
        </div>
        <div class="modal-body" style="background-color:white">
            <div id="display-modal-body">
            </div>
        </div>

    </div>
</div>

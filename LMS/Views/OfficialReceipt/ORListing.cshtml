
@{
    ViewBag.Title = "ORListing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="panel panel-info">
        <div class="panel panel-heading panel-title">
            <b>Official Receipt Listing</b>
        </div>
        <div class="panel panel-body">
            <div class="row">                
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div class="btn-group">
                                <button type="button" onclick="showListing(14)" class="btn btn-xs btn-white" style="color:black;border:1px solid #ccc;">For Submission</button>
                                <button type="button" onclick="showListing(13)" class="btn btn-xs btn-white" style="color:black;border:1px solid #ccc;">Submitted</button>
                                <button type="button" onclick="showListing(1)" class="btn btn-xs btn-white" style="color:black;border:1px solid #ccc;">Cancelled</button>
                            </div>
                        </div>
                        <div class="ibox-content">
                            <div class="form-horizontal">
                                <div id="divSubmission">
                                    <table id="tblORListingSubmission" class="table table-bordered" width="100%" cellspacing="0" style="font-size:smaller;">
                                        <thead>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                                <div id="divSubmitted">
                                    <table id="tblORListingSubmitted" class="table table-bordered" width="100%" cellspacing="0" style="font-size:smaller;">
                                        <thead>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                                <div id="divCancelled">
                                    <table id="tblORListingCancelled" class="table table-bordered" width="100%" cellspacing="0" style="font-size:smaller;">
                                        <thead>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Helper.LoadCustomJS("ViewsJS/Collection/JS_ORListing.js", Url)
}

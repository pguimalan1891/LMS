@using LMS.Models.Collection
@model LMS.Models.Collection.SundryViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "addSundry" }))
{
    <div style="background-color:white;">
        <div class="row">
            <div class="ibox float-e-margins">
                <div class="ibox-title" style="background-color:#1ab394;color:white;">
                    <h5>Add Account Type</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Account Type</label>
                            <div class="col-lg-9">
                                @Html.DropDownListFor(model => model.SundryDetails.CMDMAccountTypeID, new SelectList(Model.CMDMAccountType, "CMDMAccountTypeID", "Description"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Amount</label>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(model => model.SundryDetails.SundryAmount, new { @class = "form-control checkMoneyModal", @vername = "Amount", @onblur = "castToCurrencyModal()" })
                                <input type="text" style="visibility:hidden;position:absolute;"/>
                            </div>                            
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
}

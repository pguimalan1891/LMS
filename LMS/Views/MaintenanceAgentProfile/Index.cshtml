@using LMS.Models.MaintenanceAgentProfile
@model LMS.Models.MaintenanceAgentProfile.AgentProfile

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="form-inline">                
                <div class="form-group">
                    <label>Search Agent&nbsp;</label>
                    <input type="text" id="filter_searchkey" placeholder="Leave blank to view all" class="form-control" />
                </div>
                <button type="button" class="btn btn-default" id="cmdFilter">Filter Search</button>
                <a class="btn btn-info" onclick="AddAgent()">Add New Agent</a>
                @Html.TextBoxFor(model => model.AGENTCode, new { @id = "AGENTCode", @disabled = "disabled", @style = "visibility:hidden", @class = "form-control", @value = @Model.AGENTCode })                
            </div>
        </div>
    </div>
    <div class="row">
        <br />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-3">
                        <h3 class="panel-title">Agent Profile</h3>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="tbl-agent" class="table table-striped table-bordered dt-responsive no-wrap" cellspacing="0" width="100%">
                                <thead>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div id="DisplayAgentModal" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="background-color:#ffffff;width:90%">
        <div class="modal-body" style="background-color:white">
            <div id="display-modal-body">
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Helper.LoadCustomJS("ViewsJS/MaintenanceAgentProfile/JS_AgentProfile.js", Url)
}





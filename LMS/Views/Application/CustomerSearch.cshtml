
@{
    ViewBag.Title = "List of Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts
{
    @Helper.LoadCustomJS("ViewsJS/Application/JS_ApplicationListCtrl.js", Url)
}


<div class="row">
    <div class="col-md-12">
        <div class="form-inline">
            <div class="form-group">
                <label>Search by Borrower Name</label>
                <input type="text" id="filter_searchkey" placeholder="Leave blank to view all" class="form-control" />
            </div>
            <button type="button" class="btn btn-default" onclick="getCustomerRecordsWithFilter($('#filter_searchkey').val())">Filter Search</button>
            <button type="button" class="btn btn-danger pull-right"><a href="~/Application/" style="color: black;">Back to Application Menu</a></button>
        </div>

    </div>
</div>
<div class="row">

    <div class="col-md-12">
        <br />
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 id="lblfindCV" class="panel-title">List of Available Borrowers</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="tblCustomerList" class="table table-striped table-bordered dt-responsive no-wrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>&nbsp;</th>
                                <th>Code</th>
                                <th>First Name</th>
                                <th>Middle Name</th>
                                <th>Last Name</th>
                                <th>Date of Birth</th>
                                <th>Gender</th>
                                <th>Civil Status</th>
                                <th>City</th>
                                <th>Address</th>
                               
                            </tr>

                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
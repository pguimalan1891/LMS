
@{
    ViewBag.Title = "LoanApplication";
}
@model LMS.Models.OfficialReceiptViewModel
@{
    ViewBag.Title = "OfficialReceipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-info">
    <div class="panel panel-heading">
        <h2>Official Receipt</h2>
    </div>
    <div class="panel panel-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-7">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>General Information</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="form-horizontal">
                                <p>Please fill-in all required fields.</p>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Or No.:</label>
                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>

                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">OR Date.:</label>

                                    <div class="col-lg-10"><input type="date" placeholder="" class="form-control"></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Branch:</label>

                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Payment Mode</label>

                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Amount Due:</label>

                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Amount Received:</label>

                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Bank Name:</label>

                                    <div class="col-lg-10">
                                        <select class="form-control">
                                            <option>Branch One</option>
                                            <option>Branch One</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Check No.:</label>

                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
                @if (Model.isSundry != true)
                {
                    <div class="col-md-5">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Discounts</h5>
                            </div>
                            <div class="ibox-content">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Acceleration Discount:</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Penalty Waived:</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Prompt Payment Discount:</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Total Discount:</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Accounts Receivables</h5>
                            </div>
                            <div class="ibox-content">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">PIP:</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">GBCO:</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">RFC:</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Total RFC:</label>

                                        <div class="col-lg-8">
                                            <input type="text" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                }
                else
                {
                    <div class="col-md-5">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Sundry Collection</h5>
                            </div>
                            <div class="ibox-content">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">Handling Fee:</label>

                                        <div class="col-lg-7">
                                            <input type="text" placeholder="" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">DST Amount:</label>

                                        <div class="col-lg-7"><input type="text" placeholder="" class="form-control"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">Restructuring Fee:</label>

                                        <div class="col-lg-7"><input type="text" placeholder="" class="form-control"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">GIBCO Premium</label>

                                        <div class="col-lg-7"><input type="text" placeholder="" class="form-control"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">Processing Fee:</label>

                                        <div class="col-lg-7"><input type="text" placeholder="" class="form-control"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">PIP:</label>

                                        <div class="col-lg-7"><input type="text" placeholder="" class="form-control"></div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">Downpayment:</label>

                                        <div class="col-lg-7"><input type="text" placeholder="" class="form-control"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">Other Amount:</label>

                                        <div class="col-lg-7"><input type="text" placeholder="" class="form-control"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">Other Description:</label>

                                        <div class="col-lg-7"><input type="text" placeholder="" class="form-control"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">Sales of Repossessed:</label>

                                        <div class="col-lg-7"><input type="text" placeholder="" class="form-control"></div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-5 control-label">Total Sundry:</label>

                                        <div class="col-lg-7"><input type="text" placeholder="" class="form-control"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                }

            </div>

            @if (Model.isSundry != true)
            {

                <div class="row">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>General Information</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="form-horizontal">
                                <p>Please fill-in all required fields.</p>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Or No.:</label>

                                    <div class="col-lg-10">
                                        <input type="email" placeholder="" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">OR Date.:</label>

                                    <div class="col-lg-10"><input type="date" placeholder="" class="form-control"></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Branch:</label>

                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Payment Mode</label>

                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Amount Due:</label>

                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Amount Received:</label>

                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Bank Name:</label>

                                    <div class="col-lg-10">
                                        <select class="form-control">
                                            <option>Branch One</option>
                                            <option>Branch One</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Check No.:</label>

                                    <div class="col-lg-10"><input type="text" placeholder="" class="form-control"></div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>

            }

            <div class="row">
                <div class="pull-right">
                    <div class="btn btn-success">
                        Submit
                    </div>
                    <div class="btn btn-danger">
                        Cancel
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
